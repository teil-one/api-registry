{
  "roots": ["<rootDir>/src"],
  "clearMocks": true,
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageProvider": "v8",
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "tsconfig": "tsconfig.jest.json",
        "useESM": true
      }
    ]
  },
  "extensionsToTreatAsEsm": [".ts"]
}
